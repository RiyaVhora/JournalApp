@model JournalApp.Models.JournalEntry

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2><i class="fas fa-exclamation-triangle"></i> Delete Journal Entry</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Warning!</strong> Are you sure you want to delete this journal entry? This action cannot be undone.
                    </div>

                    <div class="mb-3">
                        <h4>@Model.Title</h4>
                        <small class="text-muted">
                            Created: @Model.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")
                        </small>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Mood))
                    {
                        <div class="mb-2">
                            <span class="badge bg-info">Mood: @Model.Mood</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Location))
                    {
                        <div class="mb-2">
                            <span class="badge bg-secondary">@Model.Location</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Tags))
                    {
                        <div class="mb-3">
                            @foreach (var tag in Model.GetTagsList())
                            {
                                <span class="badge bg-light text-dark me-1">#@tag</span>
                            }
                        </div>
                    }

                    <div class="content-preview mb-3">
                        <strong>Content Preview:</strong>
                        <div class="border p-3 mt-2 bg-light">
                            @if (Model.Content.Length > 200)
                            {
                                @Html.Raw(Model.Content.Substring(0, 200).Replace("\n", "<br/>"))<text>...</text>
                            }
                            else
                            {
                                @Html.Raw(Model.Content.Replace("\n", "<br/>"))
                            }
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Yes, Delete Entry
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
